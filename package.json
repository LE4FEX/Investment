{
  "name": "investment-toolkit",
  "version": "0.1.0",
  "description": "Client-side investment dashboard with portfolio tracking, technical analysis, and backtesting.",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "lint": "eslint \"src/**/*.{js,jsx}\"",
    "format": "prettier --write .",
    "test": "vitest run",
    "test:watch": "vitest",
    "prepare": "husky"
  },
  "keywords": [
    "investing",
    "chartjs",
    "dca",
    "backtesting",
    "alpha-vantage",
    "netlify-functions"
  ],
  "author": "Investment Toolkit Contributors",
  "license": "MIT",
  "lint-staged": {
    "*.{js,json,css,md}": [
      "prettier --write"
    ],
    "src/**/*.{js,jsx}": [
      "eslint --fix"
    ]
  },
  "dependencies": {
    "chart.js": "^4.5.0",
    "chartjs-plugin-zoom": "^2.2.0"
  },
  "devDependencies": {
    "@vitejs/plugin-legacy": "^7.2.1",
    "eslint": "^9.36.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.32.0",
    "husky": "^9.1.7",
    "jsdom": "^27.0.0",
    "lint-staged": "^16.2.0",
    "prettier": "^3.6.2",
    "vite": "^7.1.7",
    "vitest": "^3.2.4"
  }
}
